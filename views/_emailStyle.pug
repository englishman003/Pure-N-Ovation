style.
      img {
        border: none;
        -ms-interpolation-mode: bicubic;
        max-width: 100%; 
      }
      body {
        background-color: #6EB5FF;
        font-family: Roboto Condensed;
        -webkit-font-smoothing: antialiased;
        font-size: 1.4rem;
        line-height: 1.4;
        margin: 0;
        padding: 0;
        -ms-text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%; 
      }
      table {
        border-collapse: separate;
        mso-table-lspace: 0pt;
        mso-table-rspace: 0pt;
        width: 100%; }
        table td {
          font-family: Roboto Condensed;
          font-size: 1.4rem;
          vertical-align: top; 
      }
      .body {
        background-color: #6EB5FF;
        width: 100%; 
      }
      .container {
        display: block;
        margin: 0 auto !important;
        /* makes it centered */
        max-width: 62rem;
        padding: 1rem;
        width: 620px; 
      }
      .content {
        box-sizing: border-box;
        display: block;
        margin: 0 auto;
        max-width: 58rem;
        padding: 1rem; 
      }
      .main {
        background: #FFFFFF;
        border-top-left-radius: .5rem;
        border-top-right-radius: .5rem;
        width: 100%; 
      }
      .wrapper {
        box-sizing: border-box;
        padding: 50px; 
      }
        #deets{
          margin: 0;
          padding: 0;
          font-family: Roboto Condensed;
          font-size: 2rem;
        }

        #deets p{
          margin: 0;
          margin-bottom: .5rem;
          font-size: 1.2rem;
          font-family: Roboto Condensed;
        }

        #deets p span{
          font-size: 1.6rem;
          font-weight: bold;
          font-family: Vladimir Script;
        }

        #deets hr{
          margin: .5rem 0 2rem 0;
          border: .05rem solid rgba(0,0,0, .25);
        }

        #opening{
          font-family: Freestyle Script;
          font-size: 2.2rem;
          font-weight: bold;
        }

        #message{
          font-family: High Tower Text;
          font-size: 1.8rem;
          margin-left: 2rem;
        }

        #closing{
          font-family: Freestyle Script;
          font-size: 2.2rem;
          font-weight: bold;
        }
      .content-block {
        padding-bottom: 10px;
        padding-top: 1rem;
      }
      .footer {
        clear: both;
        margin-top: 0;
        text-align: center;
        width: 100%; 
      }
        .footer td,
        .footer p,
        .footer span,
        .footer a {
          color: #333333;
          font-size: 1.6rem;
          text-align: center;
          font-weight: bold
      }
      h1,
      h2,
      h3,
      h4 {
        color: #000000;
        font-family: sans-serif;
        font-weight: 400;
        line-height: 1.4;
        margin: 0;
        margin-bottom: 3rem; 
      }
      h1 {
        font-size: 3.5rem;
        font-weight: 300;
        text-align: center;
        text-transform: capitalize; 
      }
      p,
      ul,
      ol {
        font-family: Roboto Condensed;
        font-size: 1.8rem;
        font-weight: normal;
        margin: 0;
        margin-bottom: 3rem; 
      }
        p li,
        ul li,
        ol li {
          list-style-position: inside;
          margin-left: .5rem; 
      }
      a {
        color: #55c57a;
        text-decoration: underline; 
      }
      .last {
        margin-bottom: 0; 
      }
      .first {
        margin-top: 0; 
      }
      .align-center {
        text-align: center; 
      }
      .align-right {
        text-align: right; 
      }
      .align-left {
        text-align: left; 
      }
      .clear {
        clear: both; 
      }
      .mt0 {
        margin-top: 0; 
      }
      .mb0 {
        margin-bottom: 0; 
      }
      .preheader {
        color: transparent;
        display: none;
        height: 0;
        max-height: 0;
        max-width: 0;
        opacity: 0;
        overflow: hidden;
        mso-hide: all;
        visibility: hidden;
        width: 0; 
      }
      .powered-by a {
        text-decoration: none; 
      }
      hr {
        border: 0;
        border-bottom: .1rem solid #f6f6f6;
        margin: 2rem 0; 
      }

      .company-footer{
        height: 5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        border-bottom-left-radius: .5rem;
        border-bottom-right-radius: .5rem;
        background-color: #FFE762;
      }
      @media only screen and (max-width: 620px) {
        table[class=body] .wrapper,
        table[class=body] .article {
          padding: 3rem !important; 
        }
        table[class=body] .content {
          padding: 0 !important; 
        }
        table[class=body] .container {
          padding: 0 !important;
          width: 100% !important; 
        }
        table[class=body] .main {
          border-left-width: 0 !important;
          border-radius: 0 !important;
          border-right-width: 0 !important; 
        }
        table[class=body] .btn table {
          width: 100% !important; 
        }
        table[class=body] .btn a {
          width: 100% !important; 
        }
        table[class=body] .img-responsive {
          height: auto !important;
          max-width: 100% !important;
          width: auto !important; 
        }
        
         #opening{
          font-family: Freestyle Script;
          font-size: 2.2rem;
          font-weight: bold;
        }

        #message{
          font-family: High Tower Text;
          font-size: 1.8rem;
          margin-left: 2rem;
        }

        #closing{
          font-family: Freestyle Script;
          font-size: 2.2rem;
          font-weight: bold;
        }
        
        .company-footer{
          border-radius: 0;
        }
      }
      @media all {
        .ExternalClass {
          width: 100%; 
        }
        .ExternalClass,
        .ExternalClass p,
        .ExternalClass span,
        .ExternalClass font,
        .ExternalClass td,
        .ExternalClass div {
          line-height: 100%; 
        }
        .apple-link a {
          color: inherit !important;
          font-family: inherit !important;
          font-size: inherit !important;
          font-weight: inherit !important;
          line-height: inherit !important;
          text-decoration: none !important; 
        } 
      }